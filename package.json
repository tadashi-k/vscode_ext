{
	"name": "editext",
	"displayName": "Edit Extension",
	"description": "",
	"version": "0.0.1",
	"publisher": "tadashi",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.deleteLine",
				"title": "Delete line",
				"category": "edit"
			},
			{
				"command": "extension.deleteEndOfLine",
				"title": "Delete to end of line",
				"category": "edit"
			},
			{
				"command": "extension.deleteWord",
				"title": "Delete current word",
				"category": "edit"
			},
			{
				"command": "extension.yank",
				"title": "Yank",
				"category": "edit"
			},
			{
				"command": "extension.copyAndUnselect",
				"title": "Copy and unselect",
				"category": "edit"
			},
			{
				"command": "extension.wordComplete",
				"title": "Word complete",
				"category": "edit"
			},
			{
				"command": "extension.nextWord",
				"title": "Next word",
				"category": "move"
			},
			{
				"command": "extension.prevWord",
				"title": "Previous word",
				"category": "move"
			},
			{
				"command": "extension.mark",
				"title": "Mark current position",
				"category": "move"
			},
			{
				"command": "extension.swapMark",
				"title": "Swap mark and current position",
				"category": "move"
			}
		],
		"keybindings": [
			{
				"command": "extension.deleteLine",
				"key": "ctrl+y"
			},
			{
				"command": "extension.deleteEndOfLine",
				"key": "ctrl+k"
			},
			{
				"command": "extension.deleteWord",
				"key": "ctrl+t"
			},
			{
				"command": "extension.yank",
				"key": "ctrl+l"
			},
			{
				"command": "extension.wordComplete",
				"key": "ctrl+n"
			},
			{
				"command": "extension.nextWord",
				"key": "ctrl+f"
			},
			{
				"command": "extension.prevWord",
				"key": "ctrl+a"
			},
			{
				"command": "extension.mark",
				"key": "escape space",
				"when": "textInputFocus && !suggestWidgetVisible && !findWidgetVisible"
			},
			{
				"command": "extension.swapMark",
				"key": "ctrl+p"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"build": "rm -fr out && tsc",
		"setup": "npm install --production"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.62.3",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4"
	}
}
